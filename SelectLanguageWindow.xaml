<Window x:Class="LearnCodeUWP.SelectLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите язык, который хотите изучить - LearnCode" 
        Height="500" 
        Width="900"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="LanguageButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="220"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#58CC02"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <ContentPresenter/>
                                <Path Data="M1 5L7 11L13 5" 
                                      Stroke="White" 
                                      StrokeThickness="2"
                                      Margin="5,0,0,0"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="White" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="https://d35aaqx5ub95lt.cloudfront.net/images/duolingo/48c3c1e7c2c3e0c3d7b2a2f2e2a2f2e2.svg"
                       Width="120"
                       Height="30"
                       VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                <TextBlock Text="Я хочу изучать..."
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"
                           Margin="0,0,0,30"/>

                <WrapPanel HorizontalAlignment="Center">
                    <Button x:Name="SelectPHP" Style="{StaticResource LanguageButtonStyle}" Click="Select_php">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Border Width="120"
                                    Height="100"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="0,0,0,15">
                                <Image Source="/images/php.png"
                                       Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="PHP"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="8,1 млн учащихся"
                                       FontSize="14"
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource LanguageButtonStyle}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Border Width="120"
                                    Height="100"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="0,0,0,15">
                                <Image Source="/images/csharp.png"
                                       Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="C#"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="6,7 млн учащихся"
                                       FontSize="14"
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource LanguageButtonStyle}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Border Width="120"
                                    Height="100"
                                    Background="White"
                                    CornerRadius="8"
                                    Margin="0,0,0,15">
                                <Image Source="/images/cpp.png"
                                       Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="C++"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="5,4 млн учащихся"
                                       FontSize="14"
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>