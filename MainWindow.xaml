<Window x:Class="LearnCodeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LearnCodeWPF" 
        Height="800" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3AB368"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F6F6F6">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Image  
                   Width="80" Height="80" 
                   Margin="0,0,0,20"/>

            <TextBlock Text="Приложение" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="#3AB368"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Начни изучение языка" 
                       FontSize="14"
                       Foreground="#646464"
                       Margin="0,10,0,40"/>

            <Border Background="White" 
                    CornerRadius="20" 
                    Width="600" 
                    Height="464"
                    Padding="40">
                <StackPanel>
                    <TextBlock Text="Как тебя зовут" 
                               FontSize="13" 
                               Foreground="#505050"/>

                    <TextBox x:Name="txtName" 
                             FontSize="13" 
                             Margin="0,10,0,30"
                             Background="#FAFAFA"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"
                             Padding="10,8"/>

                    <TextBlock Text="Your experience level:" 
                               FontSize="13" 
                               Foreground="#505050"/>

                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,30">
                        <RadioButton x:Name="rbBeginner" 
                                     Content="Начинающий" 
                                     Margin="0,0,10,0"
                                     GroupName="Level"/>
                        <RadioButton x:Name="rbIntermediate" 
                                     Content="Средний" 
                                     Margin="0,0,10,0"
                                     GroupName="Level"/>
                        <RadioButton x:Name="rbAdvanced" 
                                     Content="Продвинутый" 
                                     GroupName="Level"/>
                    </StackPanel>

                    <TextBlock Text="Choose your language:" 
                               FontSize="13" 
                               Foreground="#505050"/>

                    <WrapPanel Margin="0,10,0,30">
                        <RadioButton x:Name="rbCSharp" 
                                     Content="C#" 
                                     Width="160" 
                                     
                                     Height="80"
                                     Margin="0,0,10,10"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     GroupName="Course"/>
                        <RadioButton x:Name="rbCPP" 
                                     Content="C++" 
                                     Width="160" 
                                     Height="20"
                                     Margin="0,0,10,10"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     GroupName="Course"/>
                        <RadioButton x:Name="rbPHP" 
                                     Content="PHP" 
                                     Width="160" 
                                     Height="80"
                                     Margin="0,0,10,10"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     GroupName="Course"/>
                    </WrapPanel>
                    <Button x:Name="btnStart" 
                            Content="Start Learning!" 
                            Height="55"
                            Click="btnStart_Click" HorizontalAlignment="Right" Width="520">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="#44BD72" 
                                                       Duration="0:0:0.2"
                                                       Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="#3AB368" 
                                                       Duration="0:0:0.2"
                                                       Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>