<Window x:Class="LearnCode.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="800" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#58CC02"/>
        <SolidColorBrush x:Key="DarkGreen" Color="#1CB0F6"/>
        <SolidColorBrush x:Key="LightGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#666666"/>
        <SolidColorBrush x:Key="White" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Red" Color="#FF4B4B"/>

        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Helvetica, Arial"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
        </Style>

        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SocialButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputField" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGray}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="White" Margin="392,0,2,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-394,0,93,0">
            <StackPanel VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="400"
                Margin="50">
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40"/>
                <TextBlock Text="Добро пожаловать"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextGray}"
                    Margin="0,0,0,30"/>

                <!-- Поля ввода -->
                <StackPanel Margin="0,0,0,20">
                    <TextBox Style="{StaticResource InputField}"
                        Margin="0,0,0,15"/>
                    <TextBox Style="{StaticResource InputField}"
                        Margin="0,0,0,15"/>
                </StackPanel>
                <Button Content="Войти"
                    Style="{StaticResource ButtonPrimary}"
                    Margin="0,0,0,20"/>
                <TextBlock Text="Или войдите с помощью"
                    Foreground="{StaticResource TextGray}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"/>
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,25"/>
                <StackPanel>
                    <Button Content="Забыли пароль?"
                        Foreground="{StaticResource DarkGreen}"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        Margin="0,0,0,15"/>
                    <Border Height="1" 
                        Background="{StaticResource LightGray}"
                        Margin="0,0,0,15"/>

                    <TextBlock Text="Нет аккаунта?"
                        Foreground="{StaticResource TextGray}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,5"/>

                    <Button Content="Создать аккаунт"
                        Foreground="{StaticResource DarkGreen}"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>