<Window x:Class="LearnCodeWPF.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вопросы урока" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White">
            <Grid>
                <Button Content="←" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="#646464"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Margin="20,0"
                        Click="BackButton_Click"/>

                <TextBlock x:Name="txtQuestionNumber" 
                           Text="Вопрос 1"
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Background="White">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="800">

                <!-- Question Panel -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock x:Name="txtInstruction" 
                               Text="Выберите ответ."
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="txtQuestion" 
                               Text="Вопрос будет здесь"
                               FontSize="16"
                               Foreground="#505050"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
                <StackPanel x:Name="optionsPanel" 
                            Margin="0,0,0,30">
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="Пропустить" 
                            Background="White"
                            Foreground="#58B368"
                            BorderBrush="#58B368"
                            BorderThickness="1"
                            FontSize="14"
                            Width="180" 
                            Height="50"
                            Margin="0,0,30,0"
                            Click="SkipButton_Click"/>

                    <Button Content="Проверить" 
                            Background="#58B368"
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="Bold"
                            Width="180" 
                            Height="50"
                            Click="CheckButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>