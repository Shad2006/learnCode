<Window x:Class="LearnCode.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnCode"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Учите языки программирования бесплатно, весело и эффективно!" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   TextAlignment="Center" 
                   Foreground="#333333"
                   Margin="0,0,0,40" Height="108"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="329" Height="129">

                <Button x:Name="btnStart" Content="Начать" 
                    Background="#7AC70C" 
                    Foreground="White" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Padding="24,12" 
                    Margin="10px" 
                    BorderThickness="0" 
                    Cursor="Hand"
                    Height="48" Click="btnStart_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="button_login" Content="У меня уже есть аккаунт" 
                        Margin="10px"
                    Background="Transparent" 
                    Foreground="LightBlue" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Padding="24,12" 
                    BorderThickness="2" 
                    BorderBrush="LightBlue" 
                    Cursor="Hand"
                    Height="48" Click="btn_login_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="12">
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
