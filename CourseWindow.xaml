<Window x:Class="LearnCodeWPF.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LearnCode" 
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        MinWidth="900" MinHeight="600">

    <Window.Resources>
        <SolidColorBrush x:Key="ColorSnow" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColorPolar" Color="#F7F7F7"/>
        <SolidColorBrush x:Key="ColorSwan" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="ColorHare" Color="#AFAFAF"/>
        <SolidColorBrush x:Key="ColorWolf" Color="#777777"/>
        <SolidColorBrush x:Key="ColorEel" Color="#4B4B4B"/>
        <SolidColorBrush x:Key="ColorMacaw" Color="#1CB0F6"/>
        <SolidColorBrush x:Key="ColorOwl" Color="#58CC02"/>
        <SolidColorBrush x:Key="ColorCardinal" Color="#FF4B4B"/>
        <SolidColorBrush x:Key="ColorBee" Color="#FFC800"/>
        <SolidColorBrush x:Key="ColorPeacock" Color="#00CD9C"/>
        <SolidColorBrush x:Key="ColorBeetle" Color="#CE82FF"/>
        <SolidColorBrush x:Key="ColorStarfish" Color="#FF86D0"/>
        <SolidColorBrush x:Key="ColorFox" Color="#FF9600"/>
        <SolidColorBrush x:Key="ColorTreeFrog" Color="#58A700"/>
        <SolidColorBrush x:Key="ColorTurtle" Color="#A5ED6E"/>
        <SolidColorBrush x:Key="ColorGuineaPig" Color="#CD7900"/>

        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource ColorSnow}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" 
                Background="{StaticResource ColorSnow}" 
                BorderBrush="{StaticResource ColorSwan}" 
                BorderThickness="0,0,2,0">
            <StackPanel>
                <Button Content="LearnCode" 
                        FontSize="24" 
                        FontWeight="Bold"
                        Foreground="{StaticResource ColorEel}"
                        HorizontalAlignment="Left"
                        Margin="40,30,0,40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Logo_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="LearnCode" 
                                           FontSize="20"
                                           Foreground="{StaticResource ColorEel}"/>
                                <TextBlock Text="программирование" 
                                           FontSize="9"
                                           Foreground="{StaticResource ColorMacaw}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <StackPanel Margin="20,0">
                    <Border Background="#F0FFF0" 
                            CornerRadius="4" 
                            BorderBrush="{StaticResource ColorOwl}" 
                            BorderThickness="2"
                            Margin="0,0,0,15"
                            Height="45">
                        <TextBlock Text="💻 Обучение" 
                                   FontSize="16"
                                   Foreground="{StaticResource ColorOwl}"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                    </Border>
                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Height="45"
                            Margin="0,0,0,15"
                            MouseEnter="NavItem_MouseEnter"
                            MouseLeave="NavItem_MouseLeave">
                        <TextBlock Text="👤 Профиль" 
                                   FontSize="16"
                                   Foreground="{StaticResource ColorHare}"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                    </Border>
                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Height="45"
                            Margin="0,0,0,15"
                            MouseEnter="NavItem_MouseEnter"
                            MouseLeave="NavItem_MouseLeave">
                        <TextBlock Text="⚡ Практика" 
                                   FontSize="16"
                                   Foreground="{StaticResource ColorHare}"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                    </Border>
                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Height="45"
                            Margin="0,0,0,30"
                            MouseEnter="NavItem_MouseEnter"
                            MouseLeave="NavItem_MouseLeave">
                        <TextBlock Text="📁 Проекты" 
                                   FontSize="16"
                                   Foreground="{StaticResource ColorHare}"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                    </Border>
                    <Border Background="{StaticResource ColorPolar}" 
                            CornerRadius="8" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="ПРОГРЕСС" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ColorHare}"/>
                            <Border Background="{StaticResource ColorSwan}" 
                                    Height="12" 
                                    CornerRadius="6"
                                    Margin="0,10,0,5">
                                <Border Background="{StaticResource ColorOwl}" 
                                        Width="{Binding ProgressWidth}" 
                                        CornerRadius="6"/>
                            </Border>
                            <TextBlock Text="{Binding ProgressPercent}" 
                                       FontSize="10" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ColorOwl}"
                                       Margin="0,5,0,0"/>

                            <TextBlock Text="{Binding ProgressDetails}" 
                                       FontSize="9"
                                       Foreground="{StaticResource ColorWolf}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="{StaticResource ColorPolar}">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    Background="{StaticResource ColorSnow}" 
                    BorderBrush="{StaticResource ColorSwan}" 
                    BorderThickness="0,0,0,2">
                <Grid>
                    <TextBlock Text="{Binding CourseTitle}" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="{StaticResource ColorEel}"
                               VerticalAlignment="Center"
                               Margin="20,0"/>
                    <Border Background="{StaticResource ColorPolar}" 
                            CornerRadius="20" 
                            Width="180" 
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0">
                        <TextBlock Text="{Binding UserFIO}" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ColorMacaw}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30,20">
                    <Border Background="{StaticResource ColorSnow}" 
                            CornerRadius="8" 
                            BorderBrush="{StaticResource ColorSwan}" 
                            BorderThickness="2"
                            Margin="0,0,0,20"
                            Height="140">
                        <StackPanel Margin="20,15">
                            <TextBlock Text="ЗАДАНИЕ ДЛЯ ПРОГРАММИСТА" 
                                       FontSize="12" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ColorHare}"/>
                            <TextBlock Text="Решите 3 задачи по программированию" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ColorEel}"
                                       Margin="0,10,0,20"/>
                            <Grid>
                                <Border Background="{StaticResource ColorSwan}" 
                                        Height="10" 
                                        CornerRadius="5"
                                        Width="200"/>
                                <Border Background="{StaticResource ColorFox}" 
                                        Height="10" 
                                        CornerRadius="5"
                                        Width="60"/>
                                <TextBlock Text="1/3 задач решено" 
                                           FontSize="10"
                                           Foreground="{StaticResource ColorWolf}"
                                           Margin="210,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Streak -->
                    <Border Background="#FFF5D3" 
                            CornerRadius="8" 
                            BorderBrush="#FBE56D" 
                            BorderThickness="2"
                            Margin="0,0,0,20"
                            Height="100">
                        <Grid>
                            <TextBlock Text="🔥" 
                                       FontSize="28"
                                       VerticalAlignment="Center"
                                       Margin="20,0"/>

                            <StackPanel Margin="70,0">
                                <TextBlock Text="ДНЕЙ ПРОГРАММИРОВАНИЯ ПОДРЯД: 7" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource ColorGuineaPig}"/>

                                <TextBlock Text="Пишите код каждый день для лучших результатов!" 
                                           FontSize="10"
                                           Foreground="{StaticResource ColorGuineaPig}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Continue Button -->
                    <Button Content="НАЧАТЬ УРОК ПРОГРАММИРОВАНИЯ" 
                            Background="{StaticResource ColorOwl}"
                            Foreground="{StaticResource ColorSnow}"
                            FontSize="14" 
                            FontWeight="Bold"
                            Height="55"
                            Width="500"
                            Margin="0,0,0,30"
                            HorizontalAlignment="Left"
                            Click="ContinueButton_Click"/>
                    <Border Background="{StaticResource ColorSnow}" 
                            CornerRadius="8" 
                            BorderBrush="{StaticResource ColorSwan}" 
                            BorderThickness="2"
                            Margin="0,0,0,40"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="ПУТЬ ИЗУЧЕНИЯ ПРОГРАММИРОВАНИЯ" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource ColorHare}"
                                       Margin="0,0,0,20"/>

                            <ItemsControl x:Name="LessonsList" 
                                          ItemsSource="{Binding Lessons}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent" 
                                                CornerRadius="4" 
                                                Padding="10,5"
                                                Margin="0,0,0,20"
                                                MouseEnter="LessonItem_MouseEnter"
                                                MouseLeave="LessonItem_MouseLeave">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Grid.Column="0" 
                                                         Width="60" 
                                                         Height="60"
                                                         Fill="{Binding Color}">
                                                    <Ellipse.Triggers>
                                                        <EventTrigger RoutedEvent="MouseDown">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation To="0.9" 
                                                                                     Duration="0:0:0.1"
                                                                                     Storyboard.TargetProperty="ScaleX"/>
                                                                    <DoubleAnimation To="0.9" 
                                                                                     Duration="0:0:0.1"
                                                                                     Storyboard.TargetProperty="ScaleY"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Ellipse.Triggers>
                                                </Ellipse>

                                                <StackPanel Grid.Column="1" Margin="20,0">
                                                    <TextBlock Text="{Binding LessonNumberText}" 
                                                               FontSize="11" 
                                                               FontWeight="Bold"
                                                               Foreground="{Binding Color}"/>

                                                    <TextBlock Text="{Binding LessonName}" 
                                                               FontSize="14" 
                                                               FontWeight="Bold"
                                                               Foreground="{Binding TextColor}"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Icon}"
                                                           FontSize="20"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>